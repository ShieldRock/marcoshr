{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{ 'marcos-web.title'|trans }}</title>
        <link rel="shortcut icon" href="{{ asset('build/images/icon/favicon.ico') }}">
        <link rel="icon" href="{{ asset('build/images/icon/favicon.ico') }}">
        <script type="text/javascript" src="{{ asset('build/js/app.js') }}"></script>
        <link type="text/css" rel="stylesheet" href="{{ asset('build/css/app.css') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('build/css/custom-modal-theme.css') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('build/css/customize.css') }}" />
        {% block head %}{% endblock %}
    </head>
    <body class="awesome-dark-background awesome-font">
        <!-- HEADER -->
        {% include 'header.html.twig' %}

        <div id="content" style="overflow-y: scroll;">
            {% block body %}{% endblock %}

            <!-- The YouTube video -->
            <div style="z-index: 9999; position: fixed; top: 150px; right: 30px; width: 350px !important; height: 250px !important; border: 3px solid #73AD21; background-color: #6c757d; border-radius: 25px;" aria-hidden="true;">
                <figure id="featured-media" class="content-media content-media--video" style="top: 40px !important;">
                    <!--<iframe id="featured-video" class="content-media__object sticky" src="https://www.youtube.com/embed/SF4aHwxHtZ0?enablejsapi=1&rel=0&showinfo=0&controls=0" frameborder="0"></iframe>-->
                </figure>

                <div style="position: absolute; top: 10px; right: 10px;">
                    <button type="button" class="close" data-dismiss="tip" aria-label="{{ 'close'|trans }}" style="outline: none;">
                        <span aria-hidden="true" style="color: white;">
                            <i class="far fa-times-circle"></i>
                        </span>
                    </button>
                </div>
            </div>
        </div>

        <!-- FOOTER -->
        {% include 'footer.html.twig' %}

        <!-- MODAL -->
        {% include 'modals/modalInfo.html.twig' %}

        {% block footer %}
            <script type="text/javascript" src="{{ asset('build/js/common.js') }}"></script>
        {% endblock %}
    </body>
</html>
